doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Login - Notes Ocean
  meta(name="description" content="Login to your account and access everythings!")
  include ../includes/bootstrap
  style
    include ../../public/stylesheets/account/signup.css
  style
    include ../../public/stylesheets/account/login.css 
  body
    header
      include ../includes/navbar
    section.main-section
      .row
        .col-lg-4.desktop-img
          img(src='/images/animation/38435-register.gif' loading='lazy' alt='signup background')
        .col-lg-3
          div
            h1 Login
            p Login to your account and access everything!
          form.login-form(method="POST")
            .form-group
              i.fa.fa-envelope
              label.animate__animated.animate__fadeInUp.d-none(for='Email') Email
              input#email.form-control(type='email' name='email' placeholder='Email' autocomplete='username' required)
            .form-group
              i.fa.fa-lock
              label.animate__animated.animate__fadeInUp.d-none(for='Password')
                | Password
              input#password.form-control(type='password' name='password' placeholder='Password' autocomplete='new-password' required)
            .form-check
              input.remember-me-checked.form-check-input(type='checkbox')
              label.form-check-label(for='flexCheckChecked') Remember Me
                span.mx-2
                  a(href="/policies/privacy#login-cookies-policy" target="_blank" style="color:blue") learn more
            .form-group
              button.btn.btn-primary.login-btn.btn-grad(type='submit').mr-3 Login
              div.mt-3
                div
                  p Forget your password? 
                    span
                    a(href='/reset-password' style="text-decoration:underline").link  Reset   
                div
                  p Don't have an account? 
                    span
                    a(href='signup' style="text-decoration:underline").link  signup                 
            .form-group.d-none
              h5 Other's 
