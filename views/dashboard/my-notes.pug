doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title My notes
        include ../includes/bootstrap
        link(rel='stylesheet' href='/stylesheets/dashboard/dashboard.css')
        link(rel='stylesheet' href='/stylesheets/dashboard/my-notes.css')
    body
    include ../includes/dashHeader
    .row
        include ../includes/dashAside
        .col-9.p-2.content
           .row
                .col-6
                    h2 My Notes
                .col-6.p-1
                    button.btn-primary.add-new.add-new-notes-btn
                        i.fa.fa-plus.m-1
                        span New
           .row
                p list all of user notes

    .modal(tabindex='-1').bg-white
        .modal-dialog.modal-fullscreen
            .modal-content
                .modal-header
                    h5.modal-title Add New
                    button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
                .modal-body
                    p Add new notes content here
                .modal-footer
                    button.btn.btn-secondary(type='button' data-bs-dismiss='modal') Close                      


    script(src='/javascripts/common.js')
    script(src='/javascripts/dashboard/dashboard.js')