                            div
                            div
                            div
                            div 

                .modal.create-collections-modal
                    .modal-dialog.modal-dialog-centered
                        .modal-content.border-0
                            form
                                .modal-header.border-0
                                    h6.modal-title Create Collection
                                .modal-body.border-0

                                    .form-group.my-2
                                        label Collection Name
                                        input(type="text" maxlength="300" minlength="10" name="collectionName").form-control
                                        .valid-feedback
                                            span Looks Good
                                        .invalid-feedback
                                            span Name should not be empty
                                    .form-group.my-2
                                        label Collection Descriptions
                                        textarea( rows="5" name="collectionDescription").form-control
                                    .form-group.my-2
                                        label Collection Image
                                        input(type="file" accept="image/*",required).form-control
                                .modal-footer.border-0
                                    button.btn.btn-dark(type='button' data-bs-dismiss='modal') Cancel
                                    button.btn.btn-primary(type='submit') Create 
                .modal.collections-context-menu.fade
                    .modal-dialog.modal-dialog-centered.modal-sm
                        .modal-content.border-0
                            .modal-header.border-0
                                .modal-title Options
                            .modal-body.border-0.px-0.py-1
                                .list-group.border-0.p-0
                                    a.list-group-item.list-group-item-action.border-0(href='#')#delete-collections
                                        i.fa.fa-trash.mx-1
                                        span Delete 
                                    a.list-group-item.list-group-item-action.border-0(href='#')#edit-collections
                                        i.fa.fa-edit.mx-1
                                        span Edit 
                                    a.list-group-item.list-group-item-action.border-0(href='#')#preview-collections 
                                        i.fa.fa-eye.mx-1
                                        span Preview 
        include ../../includes/dashjs
        script
            include ../../../public/javascripts/dashboard/collections/my-collections.js
