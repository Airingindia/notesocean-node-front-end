doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Collections | Notes Ocean
        include ../../includes/dashcss
        style
            include ../../../public/stylesheets/dashboard/collection/myCollection.css
    body
        header
            include ../../includes/dashHeader
        section.main-section
            .row
                include ../../includes/dashAside
                .col-10.second-side
                    .heading-container.d-flex.justify-content-between
                        div
                            h2.header-title Collections
                            small.header-text Collections and their notes is publically visible to everyone
                        div
                            button.btn-primary.btn.create-collection-btn
                                i.fa.fa-plus.m-1
                                span New
                    .search-container
                        form
                            .input-group
                                input(type="search" placeholder="Search collections" aria-label="Search collections").form-control
                                button.btn.btn-primary.btn-sm.search-btn(aria-label="Search") Search
                    .no-collections.w-100.d-none
                        .card.border-0.p-0
                            .card-content.p-0
                                center
                                    img.card-img-top.w-25(src="/images/dashboard/collection_not_found.svg")
                                    .card-body
                                        h2 No Collections created Yet
                                        button.btn.btn-primary.create-collection-btn Create New

                        .row.loading-collections
                            center 
                                .lds-roller
                                    div
                                    div
                                    div
                                    div
                                    div
                                    div
                                    div
                                    div
                                p.loading-colletion-text Your Collections are loading... please wait...
                    .collections.border-0
                        ol.list-group.border-0.collections-rows
