doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Collection Name
        include ../../includes/dashcss
        style
            include ../../../public/stylesheets/dashboard/collection/collectionDetails.css
    body
        header
            include ../../includes/dashHeader
        section.main-section
            .row
                include ../../includes/dashAside
                .col-10.second-side
                    div
                        form.form
                            .row
                                .col-md-4
                                    h5 Collection Details
                                    .form-group.my-2
                                        label Collection Name
                                        input(type="text").form-control(placeholder="Class 10th all math mcq pdf").collection-name
                                        .invalid-feedback
                                            p.invalid-title-error Collection name should be atleast 10 characters
                                        .valid-feedback
                                            p looks good
                                    .form-group.my-2
                                        label Collection Descriptions
                                        textarea.form-control(rows="4" cols="5")
                                        .invalid-feedback
                                            p.invalid-title-error Collection descriptions should be atleast 20 characters
                                        .valid-feedback
                                            p looks good
                                .col-md-8
                                    h5 Collection Notes
                                    .colllection-notes-selector.d-flex
                                        .collection-notes-item
                                            .card
                                                .card-header
                                                    i.fa.fa-times
                                                .card-body
                                                    img.card-img-top(src="/images/dummy/collection.png")
                                                .card-footer
