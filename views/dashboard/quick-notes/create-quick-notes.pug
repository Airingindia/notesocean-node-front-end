doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        include ../../includes/dashcss
        title Create Quick Notes | Dashboard
        link(href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css" rel="stylesheet")
        link(href='//cdn.quilljs.com/1.3.6/quill.snow.css' rel='stylesheet')
        link(href='//cdn.quilljs.com/1.3.6/quill.bubble.css' rel='stylesheet')
        link(href='//cdn.quilljs.com/1.3.6/quill.core.css' rel='stylesheet')
        link(href="/vendors/highlight/styles/monokai-sublime.min.css" rel="stylesheet")
        style.
            #editor-container {
                height: 75vh;
                border:none !important;

            }

            .editor-wrapper{
                border:none !important;
                box-shadow: 0px 0px 10px 0px #ccc !important;
                border-radius: 5px !important;
            }

            .ql-toolbar{
                border-radius: 5px !important;
                border:none !important;
                background : #C51C1D !important;
                color : #fff !important;
            }

            .ql-toolbar .ql-stroke {
                fill: none;
                stroke: #fff;
                }

            .ql-toolbar .ql-fill {
                fill: #fff;
                stroke: none;
                }

            .ql-toolbar .ql-picker {
                color: #fff;
            }

    body
        header
            include ../../includes/navbar.pug
        section.main-section

            .container(style='margin-top: 90px;')
                .editor-wrapper
                    #editor-container
                .button-wrapper
                    .btn-group.mt-2
                        button.btn.btn-danger.btn-sm(type='button') 
                            i.fas.fa-save.mx-1
                            span Save
                        button.btn.btn-dark.btn-sm(type='button')
                            i.fas.fa-share.mx-1
                            span Share
        include ../../includes/dashjs
        script(src='//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/highlight.min.js')
        script(src='//cdn.quilljs.com/1.3.6/quill.core.js')
        script(src='//cdn.quilljs.com/1.3.6/quill.js')
        script(src='//cdn.quilljs.com/1.3.6/quill.min.js')

        script
            include ../../../public/javascripts/dashboard/quick-notes/create-quick-notes.js