doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title Internal server error
        include ../includes/bootstrap.pug
        style.
            .main-section{
                margin-top: 100px;
            }
            .main-section img{
                width : 300px;
                height :300px;   
                margin:0 auto;
            }

            .container{
                position:fixed;
                top:50%;
                left:50%;
                transform: translate(-50%,-50%);
                width:50%;
            }


            @media(max-width:768px){
                .container{
                    width:100%;
                }

            }
    body
        header
            include ../includes/navbar.pug
        section.main-section
            .container.text-center
                //- img(src="/images/illustrations/engineering.svg" alt="internal server error")
                h1.my-3.text-danger No internet Connection !
                p Please re-check your router,wifi or mobile data to confirm internet connectivity
                a.btn.btn-dark.text-light.btn-sm.mx-2(href=data)
                    i.fa.fa-refresh.mx-1
                    span Refresh
