doctype html
html(lang="en")
    head
        //- main meta's
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        meta(name="description",content=`${(collection.description)}`)
        meta(name="keyword",content=`<collection tags>`)
        title #{collection.name} | Notes ocean
        link(rel="canonical",href=`https://notesocean.com/collection/${(collection.id)}`)

        //-  og 
        meta(property='og:title' content=`${(collection.name)}`)
        meta(property='og:site_name' content='Notes ocean')
        meta(property='og:url' content=`https://notesocean.com/collection/${(collection.id)}`)
        meta(property='og:description' content=`${(collection.description)}`)
        meta(property='og:type' content='product.item')
        meta(property='og:image' content=`${(collection.thumbnails)}`)

        //- twitter card
        meta(name='twitter:card' content='summary')
        meta(name='twitter:site' content='@real_notesocean')
        meta(name='twitter:title' content=`${(collection.name)}`)
        meta(name='twitter:description' content=`${(collection.description)}`)
        meta(name='twitter:image' content=`${(collection.thumbnails)}`)
        //- schema.org
        include includes/bootstrap
        style
            include ../public/stylesheets/subpages/collection.css
        //- schema notes breadcumb

    body 
        header 
            include includes/navbar
        section
            .collection-info-container.container
                .d-flex.bg-white.rounded.border-danger.justify-content-center
                    .flex-shrink-3.collection-img-cont
                        img(src=collection.thumbnails alt=collection.name).collection-thumbnails
                    .flex-grow-0.ms-3.collection-details-cont.py-3
                        h1=collection.name
                        p=collection.description
                        p 
                            i.fa.fa-book.mx-1
                            span=collection.products.length 
                            span.mx-1 notes
                        .user-profile.mt-4
                            a(href=`/profile/${(user.id)}`)
                                .d-flex.align-items-center.collection-user-info
                                    .flex-shrink-0
                                        img(src='/images/dummy-user.jpeg' alt='...').collection-user-image
                                    .flex-grow-1.ms-1
                                        h2 #{user.firstName} #{user.lastName}
            div.px-3
                h3 #{collection.name} notes
            .row.public-now-row.mx-1
                -for (var i = 0;i<collection.products.length;i++){
                    -var product_id = collection.products[i].id;
                    -var product_name = collection.products[i].name;
                    - var product_thumbnails = collection.products[i].thumbnails.split(",")[0];
                    - var product_views = collection.products[i].views;
                    - var product_pages = collection.products[i].pages;
                    - var product_timestamp = collection.products[i].timestamp;
                    - var product_actual_time = timeService.get(product_timestamp);
                .col-md-3.my-2
                    a(href=`/notes/${(product_id)}`)
                        .card.shadow.border-0.rounded.h-100.wow.animate__animated.animate__fadeInUp.public-notes-item
                            .card-header.border-0.bg-white
                                p.card-title=product_name
                            .card-body.border-0(style=`background-image:url(${(product_thumbnails)});background-size:cover`).notes-thumbnails
                            .card-footer.border-0.bg-white
                                .row
                                    .col-12
                                        //- p.card-title Lorem, ipsum dolor sit ametssdgdg
                                        p.card-text.notes-details-text
                                            span
                                                i.fa.fa-globe.mx-1
                                                small=product_views
                                                    span.mx-1 views
                                            span.mx-1
                                                i.fa.fa-file.mx-1 
                                                small=product_pages
                                                    span.mx-1 Pages
                                            span.mx-1
                                                i.fa.fa-clock-o.mx-1
                                                small=product_actual_time

                -}

